<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperDetails">

    <TextView
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/number"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:text="@string/rokesshwar_n_zohocorp_com"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_above="@id/email"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:text="@string/_7010874153"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_above="@+id/name"
        android:layout_centerVertical="true"
        android:layout_marginBottom="22dp"
        android:text="Name: Rokesshwar.N"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/call"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_above="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginStart="-280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-143dp"
        android:layout_toEndOf="@+id/number"
        android:background="#ffffff"
        android:elevation="50dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="micio.json"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Sms"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_above="@+id/email"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="-138dp"
        android:layout_toRightOf="@id/call"
        android:background="#ffffff"
        android:elevation="50dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="sms.json"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart" />
<com.airbnb.lottie.LottieAnimationView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:lottie_fileName="contact_us.json"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_repeatMode="restart"/>
</RelativeLayout>